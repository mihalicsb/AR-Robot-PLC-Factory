@page
@model ManagementWebServer.Pages.robot.factory.CreateModel

@{
    ViewData["Title"] = "Gyár felvétele";
}


<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Factory.Name" class="control-label"></label>
                <input asp-for="Factory.Name" class="form-control" />
                <span asp-validation-for="Factory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factory.Width" class="control-label"></label>
                <input asp-for="Factory.Width" class="form-control" />
                <span asp-validation-for="Factory.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factory.Length" class="control-label"></label>
                <input asp-for="Factory.Length" class="form-control" />
                <span asp-validation-for="Factory.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-page="Index">Mégsem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
