@page
@model ManagementWebServer.Pages.plcs.EditModel

@{
    ViewData["Title"] = "PLC módosítása";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Plc.Id" />
            <div class="form-group">
                <label asp-for="Plc.Name" class="control-label"></label>
                <input asp-for="Plc.Name" class="form-control" />
                <span asp-validation-for="Plc.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plc.Address" class="control-label"></label>
                <input asp-for="Plc.Address" class="form-control" />
                <span asp-validation-for="Plc.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plc.Type.Name" class="control-label"></label>
                <select asp-for="Plc.TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Plc.DbNumber" class="control-label"></label>
                <input asp-for="Plc.DbNumber" class="form-control" />
                <span asp-validation-for="Plc.DbNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br/>
<div>
    <a class="btn btn-secondary" asp-page="./Index">Mégsem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
