@page
@model ManagementWebServer.Pages.plcs.ioports.EditModel

@{
    ViewData["Title"] = "I/O módosítása";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IoPort.Id" />
            <div class="form-group">
                <label asp-for="IoPort.Name" class="control-label"></label>
                <input asp-for="IoPort.Name" class="form-control" />
                <span asp-validation-for="IoPort.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IoPort.Plc.Name" class="control-label"></label>
                <select asp-for="IoPort.PlcId" class="form-control" asp-items="ViewBag.PlcId"></select>
                <span asp-validation-for="IoPort.PlcId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IoPort.Direction" class="control-label"></label>
                <select asp-for="IoPort.Direction" class="form-select form-select-lg mb-3">
                    <option value="0">Bemenet</option>
                    <option value="1">Kimenet</option>
                </select>
                @*<input asp-for="IoPort.Direction" class="form-control" />
                <span asp-validation-for="IoPort.Direction" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="IoPort.Offset" class="control-label"></label>
                <input asp-for="IoPort.Offset" class="form-control" />
                <span asp-validation-for="IoPort.Offset" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IoPort.Bit" class="control-label"></label>
                <input asp-for="IoPort.Bit" class="form-control" />
                <span asp-validation-for="IoPort.Bit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IoPort.Value" class="control-label"></label>
                <input asp-for="IoPort.Value" class="form-control" />
                <span asp-validation-for="IoPort.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br/>
    <a class="btn btn-secondary" asp-page="./Index">Mégsem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
