@page
@model ManagementWebServer.Pages.plcs.IndexModel

@{
    ViewData["Title"] = "PLC-k";
}

<p>
    <a class="btn btn-primary" asp-page="Create">Új PLC</a>
    <a class="btn btn-primary" asp-page="/plcs/ioports/Index">I/O portok</a>
    <a class="btn btn-primary" asp-page="/plcs/plctype/Index">PLC típusok</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plc[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plc[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plc[0].DbNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plc[0].Type.Name)
            </th>
            <th>
                QR kód
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Plc) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DbNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                 <a class="btn btn-secondary" href="@Url.Page("Index", "DownloadFile", new { id = item.Id})">Letöltés</a>
            </td>
            <td>
                <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@item.Id">Módosít</a>
                <a class="btn btn-secondary" asp-page="./Delete" asp-route-id="@item.Id">Töröl</a>
            </td>
        </tr>
}
    </tbody>
</table>
